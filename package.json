{
  "name": "mindmap-tool",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered mind mapping tool for Mac",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder --mac",
    "lint": "eslint ."
  },
  "dependencies": {
    "@xyflow/react": "^12.0.0",
    "zustand": "^4.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.55.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mindmap.tool",
    "productName": "MindMap Tool",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "directories": {
      "output": "release"
    }
  }
}
